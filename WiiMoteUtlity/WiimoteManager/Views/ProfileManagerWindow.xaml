<Window x:Class="WiimoteManager.Views.ProfileManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WiimoteManager.ViewModels"
        xmlns:services="clr-namespace:WiimoteManager.Services"
        Title="Profile Manager" 
        MinHeight="700" MinWidth="1000"
        Height="800" Width="1400"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">
    
    <Window.Resources>
        <!-- Animations -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="#232323"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Button -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{StaticResource AccentColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentPressedBrush}"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Icon Button -->
        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
        
        <!-- Template Button -->
        <Style x:Key="TemplateButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#663399"/>
            <Setter Property="Padding" Value="16,10"/>
        </Style>
        
        <!-- SearchBox -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="border" Property="Background" Value="#2F2F2F"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="border" Property="Background" Value="#353535"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#0078D4" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Main Container with Custom Window Chrome -->
    <Border Background="{StaticResource WindowBackgroundBrush}" 
            BorderBrush="{StaticResource AccentBrush}" 
            BorderThickness="1"
            CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="10" Opacity="0.7"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    CornerRadius="12,12,0,0"
                    Height="60"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#151515" Offset="0.0"/>
                        <GradientStop Color="#252525" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <Grid Margin="25,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="Profile Manager" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource AccentBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="âˆ’" 
                                Width="46" Height="46"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="20"
                                Click="Minimize_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="âœ•" 
                                Width="46" Height="46"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Click="Close_Click"
                                Cursor="Hand"
                                Margin="5,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Search and Filter Bar -->
                <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search Box with Icon -->
                        <Grid Grid.Column="0">
                            <TextBox Style="{StaticResource SearchBox}"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="ðŸ” Search profiles, tags, games..." 
                                       Foreground="#666666"
                                       FontSize="14"
                                       Margin="20,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SearchText}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        
                        <!-- Sort Dropdown -->
                        <ComboBox Grid.Column="1" 
                                  SelectedItem="{Binding SortOrder}"
                                  Width="180"
                                  Margin="15,0,0,0"
                                  Background="#2A2A2A"
                                  Foreground="White"
                                  BorderBrush="#3A3A3A"
                                  BorderThickness="2"
                                  Padding="15,12"
                                  FontSize="14"
                                  MinHeight="48">
                            <ComboBox.ItemsSource>
                                <x:Array Type="services:ProfileSortOrder">
                                    <services:ProfileSortOrder>Name</services:ProfileSortOrder>
                                    <services:ProfileSortOrder>LastUsed</services:ProfileSortOrder>
                                    <services:ProfileSortOrder>MostUsed</services:ProfileSortOrder>
                                    <services:ProfileSortOrder>Favorites</services:ProfileSortOrder>
                                    <services:ProfileSortOrder>CreatedDate</services:ProfileSortOrder>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                        
                        <!-- Favorites Filter -->
                        <CheckBox Grid.Column="2"
                                  IsChecked="{Binding ShowFavoritesOnly}"
                                  Content="â­ Favorites Only"
                                  Foreground="White"
                                  Margin="20,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="14"
                                  FontWeight="SemiBold"/>
                        
                        <!-- Refresh Button -->
                        <Button Grid.Column="3"
                                Content="ðŸ”„"
                                Command="{Binding RefreshProfilesCommand}"
                                Style="{StaticResource IconButton}"
                                Background="#333333"
                                ToolTip="Refresh Profiles"
                                Margin="15,0,0,0"/>
                    </Grid>
                </Border>
                
                <!-- Main Content Area - Split View -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380" MinWidth="300"/>
                        <ColumnDefinition Width="*" MinWidth="500"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left: Profile List -->
                    <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,10,0">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" 
                                       Text="Your Profiles" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       Margin="0,0,0,20"/>
                            
                            <ListBox ItemsSource="{Binding Profiles}"
                                     SelectedItem="{Binding SelectedProfile}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="White"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="border"
                                                            Background="#2A2A2A" 
                                                            Padding="15"
                                                            Margin="0,0,0,8"
                                                            CornerRadius="8"
                                                            Cursor="Hand">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#353535"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#0078D4"/>
                                                            <Setter TargetName="border" Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect Color="#0078D4" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <DockPanel Grid.Row="0">
                                                <TextBlock DockPanel.Dock="Left" Text="{Binding IconEmoji}" FontSize="24" Margin="0,0,10,0"/>
                                                <TextBlock DockPanel.Dock="Right" Text="â­" FontSize="16" Margin="10,0,0,0" 
                                                           Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisConverter}}"/>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="15" TextTrimming="CharacterEllipsis"/>
                                            </DockPanel>
                                            
                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding Description}" 
                                                       Foreground="#CCCCCC" 
                                                       FontSize="12" 
                                                       Margin="0,6,0,0"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextWrapping="Wrap"
                                                       MaxHeight="36"/>
                                            
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border Background="#1A1A1A" CornerRadius="4" Padding="6,3" Margin="0,0,5,0">
                                                    <TextBlock Foreground="#999999" FontSize="11">
                                                        <Run Text="Used:"/>
                                                        <Run Text="{Binding UsageCount}" FontWeight="Bold" Foreground="White"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Background="#1A1A1A" CornerRadius="4" Padding="6,3" 
                                                        Visibility="{Binding UseAccelerometer, Converter={StaticResource BoolToVisConverter}}">
                                                    <TextBlock Text="ðŸŽï¸ Motion" Foreground="#FFB900" FontSize="11" FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </Border>
                    
                    <!-- Right: Profile Details -->
                    <Border Grid.Column="1" Style="{StaticResource Card}" Margin="10,0,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel DataContext="{Binding SelectedProfile}">
                                <TextBlock Text="Profile Details" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,25"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Name -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" Foreground="#CCCCCC" Margin="0,0,15,15" VerticalAlignment="Center" FontSize="14"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource SearchBox}" Margin="0,0,0,15"/>
                                    
                                    <!-- Icon -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Icon" Foreground="#CCCCCC" Margin="0,0,15,15" VerticalAlignment="Center" FontSize="14"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding IconEmoji, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource SearchBox}" Margin="0,0,0,15"/>
                                    
                                    <!-- Description -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Description" Foreground="#CCCCCC" Margin="0,0,15,15" VerticalAlignment="Top" Padding="0,12,0,0" FontSize="14"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource SearchBox}"
                                             AcceptsReturn="True" TextWrapping="Wrap" Height="80" Margin="0,0,0,15"/>
                                    
                                    <!-- Tags -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Tags" Foreground="#CCCCCC" Margin="0,0,15,15" VerticalAlignment="Center" FontSize="14"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Tags, Converter={StaticResource ListToStringConverter}, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource SearchBox}" Margin="0,0,0,15"/>
                                    
                                    <!-- Associated Games -->
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Games" Foreground="#CCCCCC" Margin="0,0,15,15" VerticalAlignment="Top" Padding="0,12,0,0" FontSize="14"/>
                                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding AssociatedGames, Converter={StaticResource ListToStringConverter}, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource SearchBox}"
                                             AcceptsReturn="True" TextWrapping="Wrap" Height="70" Margin="0,0,0,15"/>
                                    
                                    <!-- Accelerometer -->
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Motion Control" Foreground="#CCCCCC" Margin="0,0,15,25" VerticalAlignment="Center" FontSize="14"/>
                                    <CheckBox Grid.Row="5" Grid.Column="1" IsChecked="{Binding UseAccelerometer}" 
                                              Content="ðŸŽï¸ Enable Accelerometer (Tilt Steering for Racing Games)" 
                                              Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,25"/>
                                    
                                    <!-- Stats -->
                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Statistics" Foreground="#CCCCCC" Margin="0,0,15,0" VerticalAlignment="Top" FontSize="14"/>
                                    <StackPanel Grid.Row="6" Grid.Column="1" Margin="0,0,0,25">
                                        <Border Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,0,8">
                                            <TextBlock Foreground="#AAAAAA" FontSize="13">
                                                <Run Text="Usage Count:" FontWeight="SemiBold"/>
                                                <Run Text="{Binding UsageCount}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                                <Run Text="times"/>
                                            </TextBlock>
                                        </Border>
                                        <Border Background="#2A2A2A" CornerRadius="8" Padding="15" Margin="0,0,0,8">
                                            <TextBlock Foreground="#AAAAAA" FontSize="13">
                                                <Run Text="Last Used:" FontWeight="SemiBold"/>
                                                <Run Text="{Binding LastUsedAt, StringFormat='yyyy-MM-dd HH:mm'}" Foreground="White" FontWeight="Bold"/>
                                            </TextBlock>
                                        </Border>
                                        <Border Background="#2A2A2A" CornerRadius="8" Padding="15">
                                            <TextBlock Foreground="#AAAAAA" FontSize="13">
                                                <Run Text="Created:" FontWeight="SemiBold"/>
                                                <Run Text="{Binding CreatedAt, StringFormat='yyyy-MM-dd HH:mm'}" Foreground="White" FontWeight="Bold"/>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Action Buttons -->
                                <WrapPanel Margin="0,20,0,0">
                                    <Button Content="ðŸ’¾ Save" Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            Style="{StaticResource ModernButton}" Background="#00AA00"/>
                                    <Button Content="â­ Toggle Favorite" Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            Style="{StaticResource ModernButton}" Background="#FFB900"/>
                                    <Button Content="ðŸ“‹ Duplicate" Command="{Binding DataContext.DuplicateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            Style="{StaticResource ModernButton}" Background="#555555"/>
                                    <Button Content="ðŸ—‘ï¸ Delete" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            Style="{StaticResource ModernButton}" Background="#E81123"/>
                                </WrapPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
                
                <!-- Bottom Action Bar -->
                <Border Grid.Row="2" Style="{StaticResource Card}" Margin="0,20,0,0">
                    <WrapPanel HorizontalAlignment="Center">
                        <Button Content="âž• New Profile" Command="{Binding CreateNewCommand}" Style="{StaticResource ModernButton}"/>
                        <Button Content="ðŸ“¥ Import" Command="{Binding ImportCommand}" Style="{StaticResource ModernButton}" Background="#0078D4"/>
                        <Button Content="ðŸ“¤ Export" Command="{Binding ExportCommand}" Style="{StaticResource ModernButton}" Background="#0078D4"/>
                        <Button Content="ðŸ“ Open Folder" Command="{Binding OpenProfileFolderCommand}" Style="{StaticResource ModernButton}" Background="#555555"/>
                        
                        <!-- Templates -->
                        <Rectangle Width="2" Height="30" Fill="#3A3A3A" Margin="15,0"/>
                        <TextBlock Text="Quick Templates:" Foreground="#CCCCCC" Margin="10,0" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                        
                        <Button Content="ðŸŽï¸ Racing" Command="{Binding CreateFromTemplateCommand}" 
                                CommandParameter="{Binding AvailableTemplates[0]}"
                                Style="{StaticResource TemplateButton}"/>
                        <Button Content="ðŸ„ Platformer" Command="{Binding CreateFromTemplateCommand}" 
                                CommandParameter="{Binding AvailableTemplates[1]}"
                                Style="{StaticResource TemplateButton}"/>
                        <Button Content="ðŸ¥Š Fighting" Command="{Binding CreateFromTemplateCommand}" 
                                CommandParameter="{Binding AvailableTemplates[2]}"
                                Style="{StaticResource TemplateButton}"/>
                        <Button Content="ðŸ”« FPS" Command="{Binding CreateFromTemplateCommand}" 
                                CommandParameter="{Binding AvailableTemplates[3]}"
                                Style="{StaticResource TemplateButton}"/>
                        <Button Content="âš½ Sports" Command="{Binding CreateFromTemplateCommand}" 
                                CommandParameter="{Binding AvailableTemplates[4]}"
                                Style="{StaticResource TemplateButton}"/>
                    </WrapPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>

<UserControl x:Class="WiimoteManager.WiimoteCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WiimoteManager"
             Background="Transparent">
    <Border Background="{StaticResource SurfaceBrush}"
            BorderBrush="#0078D4"
            BorderThickness="2"
            CornerRadius="12"
            Padding="25"
            Margin="12"
            MinWidth="380"
            MaxWidth="420">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Device Name & Status -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}">
                        <Run Text="üéÆ"/>
                        <Run Text="{Binding Device.DisplayName, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,5,0,0">
                        <Run Text="{Binding Device.BluetoothAddress, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Status Badge -->
                <Border Grid.Column="1"
                       Background="{Binding Device.IsConnected, Converter={StaticResource ConnectionStatusColor}}"
                       CornerRadius="16"
                       Padding="14,8"
                       VerticalAlignment="Top">
                    <Border.Effect>
                        <DropShadowEffect Color="{Binding Device.IsConnected, Converter={StaticResource ConnectionStatusColor}}" 
                                        BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                    <TextBlock Text="{Binding StatusText}" FontSize="12" FontWeight="Bold" Foreground="White"/>
                </Border>
            </Grid>

            <!-- Battery & Signal -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Battery -->
                <StackPanel Margin="0,0,10,0">
                    <TextBlock FontSize="10" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,5">üîã Battery</TextBlock>
                    <ProgressBar Height="8"
                                 Value="{Binding BatteryPercent}"
                                 Maximum="100"
                                 Foreground="#00CC44"
                                 Background="{StaticResource InputBackgroundBrush}"
                                 BorderThickness="0"/>
                    <TextBlock FontSize="10" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,3,0,0">
                        <Run Text="{Binding BatteryPercent}"/>
                        <Run Text="%"/>
                    </TextBlock>
                </StackPanel>

                <!-- Signal Strength -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock FontSize="10" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,5">üì° Signal</TextBlock>
                    <ProgressBar Height="8"
                                 Value="{Binding Device.SignalStrength}"
                                 Maximum="100"
                                 Foreground="#0099FF"
                                 Background="{StaticResource InputBackgroundBrush}"
                                 BorderThickness="0"/>
                    <TextBlock FontSize="10" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,3,0,0">
                        <Run Text="{Binding Device.SignalStrength}"/>
                        <Run Text="%"/>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Buttons Press Display -->
            <Border Grid.Row="2" Background="{StaticResource CardBackgroundBrush}" Padding="12,10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock FontSize="10" Foreground="{StaticResource SecondaryTextBrush}">üéÆ Buttons</TextBlock>
                    <TextBlock FontSize="12" Foreground="#FFCC00" Margin="0,5,0,0" TextWrapping="Wrap">
                        <Run Text="{Binding PressedButtons}"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Accelerometer Tilt -->
            <Border Grid.Row="3" Background="{StaticResource CardBackgroundBrush}" Padding="12,10" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock FontSize="10" Foreground="{StaticResource SecondaryTextBrush}">‚ÜîÔ∏è Accel X</TextBlock>
                        <TextBlock FontSize="13" Foreground="#0099FF" Margin="0,3,0,0">
                            <Run Text="{Binding Device.AccelX, Mode=OneWay, StringFormat=F2}"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock FontSize="10" Foreground="{StaticResource SecondaryTextBrush}">‚ÜïÔ∏è Accel Y</TextBlock>
                        <TextBlock FontSize="13" Foreground="#0099FF" Margin="0,3,0,0">
                            <Run Text="{Binding Device.AccelY, Mode=OneWay, StringFormat=F2}"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <TextBlock FontSize="10" Foreground="{StaticResource SecondaryTextBrush}">‚¨ÜÔ∏è Accel Z</TextBlock>
                        <TextBlock FontSize="13" Foreground="#0099FF" Margin="0,3,0,0">
                            <Run Text="{Binding Device.AccelZ, Mode=OneWay, StringFormat=F2}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- LED Controls -->
            <Border Grid.Row="4" Background="{StaticResource CardBackgroundBrush}" Padding="12,10" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LED1 -->
                    <Button Grid.Column="0"
                            Command="{Binding ToggleLED1Command}"
                            Background="{Binding IsLed1On, Converter={StaticResource LEDColorConverter}}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10"
                            Margin="0,0,5,0"
                            ToolTip="LED 1">
                        <TextBlock Text="1Ô∏è‚É£" TextAlignment="Center" FontSize="16"/>
                    </Button>

                    <!-- LED2 -->
                    <Button Grid.Column="1"
                            Command="{Binding ToggleLED2Command}"
                            Background="{Binding IsLed2On, Converter={StaticResource LEDColorConverter}}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10"
                            Margin="5,0,5,0"
                            ToolTip="LED 2">
                        <TextBlock Text="2Ô∏è‚É£" TextAlignment="Center" FontSize="16"/>
                    </Button>

                    <!-- LED3 -->
                    <Button Grid.Column="2"
                            Command="{Binding ToggleLED3Command}"
                            Background="{Binding IsLed3On, Converter={StaticResource LEDColorConverter}}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10"
                            Margin="5,0,5,0"
                            ToolTip="LED 3">
                        <TextBlock Text="3Ô∏è‚É£" TextAlignment="Center" FontSize="16"/>
                    </Button>

                    <!-- LED4 -->
                    <Button Grid.Column="3"
                            Command="{Binding ToggleLED4Command}"
                            Background="{Binding IsLed4On, Converter={StaticResource LEDColorConverter}}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10"
                            Margin="5,0,0,0"
                            ToolTip="LED 4">
                        <TextBlock Text="4Ô∏è‚É£" TextAlignment="Center" FontSize="16"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Profile Controls -->
            <Border Grid.Row="5" Background="{StaticResource CardBackgroundBrush}" Padding="12,10" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="üìÅ" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource SecondaryTextBrush}"/>
                    
                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding ProfileNames}"
                              SelectedItem="{Binding SelectedProfileName}"
                              Margin="0,0,5,0"
                              Height="25"
                              BorderThickness="0"/>
                              
                    <Button Grid.Column="2" 
                            Content="‚ûï" 
                            Command="{Binding CreateProfileCommand}"
                            Width="25" Height="25"
                            Background="{StaticResource ButtonBackgroundBrush}" Foreground="White"
                            BorderThickness="0" Margin="0,0,5,0"
                            ToolTip="Create New Profile"/>
                            
                    <Button Grid.Column="3" 
                            Content="üóëÔ∏è" 
                            Command="{Binding DeleteProfileCommand}"
                            Width="25" Height="25"
                            Background="#AA3333" Foreground="White"
                            BorderThickness="0"
                            ToolTip="Delete Profile"/>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <Grid Grid.Row="6" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Vibrate Button -->
                <Button Grid.Column="0"
                        Content="üì≥ Vibrate"
                        Command="{Binding ToggleRumbleCommand}"
                        Background="{Binding VibrationIntensity, Converter={StaticResource RumbleColorConverter}}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10,8"
                        FontSize="11"
                        Cursor="Hand"
                        Margin="0,0,5,0"/>

                <!-- Test Button -->
                <Button Grid.Column="1"
                        Content="üîß Test"
                        Command="{Binding OpenButtonTestCommand}"
                        Background="{StaticResource AccentBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10,8"
                        FontSize="11"
                        Cursor="Hand"
                        Margin="5,0,5,0"
                        ToolTip="Open Button Test Diagnostic"/>

                <!-- Map Button -->
                <Button Grid.Column="2"
                        Content="üéÆ Map"
                        Command="{Binding OpenMappingCommand}"
                        Background="{StaticResource SurfaceBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10,8"
                        FontSize="11"
                        Cursor="Hand"
                        Margin="5,0,0,0"
                        ToolTip="Configure Xbox Mapping"/>
            </Grid>

            <!-- Emulation Controls -->
            <Grid Grid.Row="7" Margin="0,15,0,0">
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="*" />
                     <ColumnDefinition Width="Auto" />
                 </Grid.ColumnDefinitions>

                 <TextBlock VerticalAlignment="Center" 
                            Foreground="{StaticResource SecondaryTextBrush}" 
                            FontSize="12" 
                            Text="üéÆ Xbox Emulation" />

                 <ToggleButton Grid.Column="1"
                               Content="{Binding IsEmulationEnabled, Converter={StaticResource BooleanToTextConverter}, ConverterParameter='ON|OFF'}"
                               IsChecked="{Binding IsEmulationEnabled}"
                               Width="60"
                               Height="24"
                               Background="{Binding IsEmulationEnabled, Converter={StaticResource BooleanToColorConverter}}"
                               Foreground="White"
                               BorderThickness="0"
                               Cursor="Hand">
                     <ToggleButton.Resources>
                         <Style TargetType="Border">
                             <Setter Property="CornerRadius" Value="12"/>
                         </Style>
                     </ToggleButton.Resources>
                 </ToggleButton>
            </Grid>
        </Grid>
    </Border>
</UserControl>

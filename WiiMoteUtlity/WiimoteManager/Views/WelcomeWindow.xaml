<Window x:Class="WiimoteManager.Views.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Wiimote Manager Pro" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBackgroundBrush}"
        Foreground="{StaticResource TextBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸ‘‹ Welcome to Wiimote Manager Pro" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="The ultimate tool for using Nintendo Wiimotes on Windows 11" FontSize="14" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="30,20">
            <StackPanel MaxWidth="700">
                
                <!-- Section 1: Compatibility -->
                <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Important Compatibility Notice" FontSize="18" FontWeight="Bold" Foreground="#FFB900" Margin="0,0,0,10"/>
                        <TextBlock Text="This application is designed specifically for ORIGINAL Nintendo Wiimotes (RVL-003)." FontSize="14" TextWrapping="Wrap"/>
                        <TextBlock Text="â€¢ Third-party 'clones' or 'motion plus inside' generic controllers usually DO NOT WORK properly with standard Bluetooth stacks." Margin="0,5,0,0" TextWrapping="Wrap" Foreground="{StaticResource SecondaryTextBrush}"/>
                        <TextBlock Text="â€¢ Official 'MotionPlus Inside' (RVL-036) remotes are supported but may require specific pairing steps." Margin="0,5,0,0" TextWrapping="Wrap" Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Section 2: Pairing Guide -->
                <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ”— How to Pair (Windows 11)" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,10"/>
                        <TextBlock Text="Windows 11 often asks for a PIN. Wiimotes DO NOT have a PIN. Follow these steps to bypass it:" FontSize="14" TextWrapping="Wrap" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="{StaticResource ButtonBackgroundBrush}" CornerRadius="15" Width="30" Height="30" Margin="0,0,15,0">
                                <TextBlock Text="1" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Press Win + R on your keyboard to open the Run dialog." VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="{StaticResource ButtonBackgroundBrush}" CornerRadius="15" Width="30" Height="30" Margin="0,0,15,0">
                                <TextBlock Text="2" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock VerticalAlignment="Center" TextWrapping="Wrap">
                                <Run Text="Type "/>
                                <Run Text="devicepairingwizard" FontFamily="Consolas" Background="{StaticResource SurfaceBrush}" Foreground="#00FF00"/>
                                <Run Text=" and press Enter."/>
                            </TextBlock>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="{StaticResource ButtonBackgroundBrush}" CornerRadius="15" Width="30" Height="30" Margin="0,0,15,0">
                                <TextBlock Text="3" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Press the red SYNC button on the back of your Wiimote (battery cover off)." VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="{StaticResource ButtonBackgroundBrush}" CornerRadius="15" Width="30" Height="30" Margin="0,0,15,0">
                                <TextBlock Text="4" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Wait for 'Nintendo RVL-CNT-01' to appear in the list and select it." VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="{StaticResource ButtonBackgroundBrush}" CornerRadius="15" Width="30" Height="30" Margin="0,0,15,0">
                                <TextBlock Text="5" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Click 'Next'. NO PIN IS REQUIRED with this method!" VerticalAlignment="Center" TextWrapping="Wrap" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Section 3: Usage -->
                <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ® Using the App" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,10"/>
                        <TextBlock Text="1. Once paired, click the 'Connect' button in this app." Margin="0,0,0,5" TextWrapping="Wrap"/>
                        <TextBlock Text="2. Use the 'Profiles' menu to set up controller mappings for games." Margin="0,0,0,5" TextWrapping="Wrap"/>
                        <TextBlock Text="3. Enable 'Xbox Emulation' to use the Wiimote as an Xbox 360 controller in modern games." Margin="0,0,0,5" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Padding="20" BorderBrush="{StaticResource ButtonBorderBrush}" BorderThickness="0,1,0,0">
            <Button Content="Got it! Let's Go" HorizontalAlignment="Right" Style="{StaticResource PrimaryButton}" Click="CloseButton_Click" Width="150"/>
        </Border>
    </Grid>
</Window>